# 跨编辑器维护一致编码风格的配置文件，一般编辑器会默认读取该配置，vscode需要安装扩展EditorConfig For vs Code
# 文档地址：https://editorconfig.org/

# top-most EditorConfig file
root = true

[*]

indent_style = space
indent_size = 4

charset = utf-8

end_of_line = lf
insert_final_newline = false

trim_trailing_whitespace = true

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
